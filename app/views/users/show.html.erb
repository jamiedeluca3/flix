<article id="user">
	<header>
		<h1><%= @user.name %></h1>
		<h1><%= @user.email%></h1>
		<h3>Member Since</h3>
		<p>
		  <%= @user.created_at.strftime("%B %Y") %>
		</p>
	</header>
	<footer>
		<nav>
			<%= link_to "Edit Account", edit_user_path(@user), class: "button" %>
			<%= link_to 'Delete Account', @user,
										method: :delete,
										data: { confirm: 'Are you sure?'},
										class: 'button' %>
		</nav>
	</footer>
</article>